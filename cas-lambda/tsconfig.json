{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "DOM"],
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "types": ["node", "puppeteer", "@wdio/mocha-framework"]
  },
  "include": ["./**/*.ts", "./test/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
